<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.geometry.Insets?>
<GridPane alignment="center" hgap="10" stylesheets="/sample/artikliStyle.css" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <TabPane prefHeight="500.0" prefWidth="500.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Artikli">
            <GridPane>
                <TextArea fx:id="artikliZaUnos" prefHeight="200.0" prefWidth="200.0"
                          GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets right="20" left="20" top="10" bottom="25"/>
                    </GridPane.margin>
                </TextArea>
                <Button mnemonicParsing="false" onAction="#dodajArtikale" text="Dodaj artikle"
                        GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <TextArea fx:id="artikliBezDuplikata" disable="true" prefHeight="200.0" prefWidth="200.0"
                          GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets right="20" left="20" bottom="40"/>
                    </GridPane.margin>
                </TextArea>
            </GridPane>
        </Tab>
        <Tab text="Račun"/>
    </TabPane>
</GridPane>
